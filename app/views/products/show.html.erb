<h1><%= link_to @product.name, product_path(@product) %></h1>
  <p><%= @product.description %></p>
  <p><%= @product.price_in_dollars %></p>
  <% @product.reviews.each do |review| %>
  
    <p><%= review.comment %></p>
    <p><%= review.created_at %></p>
  <% end %>

<%= link_to("Edit", "/products/#{@product.id}/edit") %>
<%= link_to("Delete", "/products/#{@product.id}", method: :delete, data: {confirm: "Do you want to delete this product?"}) %>
