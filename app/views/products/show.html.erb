<h1><%= link_to @product.name, product_path(@product) %></h1>
  <p><%= @product.description %></p>
  <p><%= @product.price_in_dollars %></p>
  <% @product.reviews.each do |review| %>

    <p><%= review.comment %></p>
    <p><%= review.created_at %></p>
  <% end %>

<%= link_to("Edit", "/products/#{@product.id}/edit") %>
<%= link_to("Delete", "/products/#{@product.id}", method: :delete, data: {confirm: "Do you want to delete this product?"}) %>


<h4>New Review</h4>

  <%= form_for([@product, @review]) do |f| %>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
