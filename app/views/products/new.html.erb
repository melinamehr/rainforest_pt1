<%= form_for(@product) do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :price_in_cents %>
    <%= f.text_field :price_in_cents %>
  </p>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>

<!-- Error messages -->
<% if @product.errors.any? %>
  <div id="error_explanation">
    <h4><%= pluralize(@product.errors.count, "error") %> prevented this product from being added</h4>
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
